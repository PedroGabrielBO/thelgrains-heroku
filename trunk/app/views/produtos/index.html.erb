<p id="notice"><%= notice %></p>

<h1>Listing Produtos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Quantidade</th>
      <th>Valor venda</th>
      <th>Valor compra</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.quantidade %></td>
        <td><%= produto.valor_venda %></td>
        <td><%= produto.valor_compra %></td>
        <td><%= link_to 'Show', produto %></td>
        <% if can? [:edit,:delete], Produto %>
          <td><%= link_to 'Edit', edit_produto_path(produto) %></td>
          <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Mah você está certo disto?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

